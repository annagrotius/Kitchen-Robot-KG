@prefix aff: <http://test.org/affordance.owl#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://test.org/affordance.owl> a owl:Ontology .

aff:affords a owl:ObjectProperty ;
    rdfs:domain aff:KitchenEntity ;
    rdfs:range aff:Action .

aff:color a owl:ObjectProperty ;
    rdfs:range xsd:string ;
    rdfs:subPropertyOf aff:quality .

aff:cut a aff:Action,
        owl:NamedIndividual .

aff:eat a aff:Action,
        owl:NamedIndividual .

aff:eatable a aff:Affordance,
        owl:NamedIndividual .

aff:form a owl:ObjectProperty ;
    rdfs:range xsd:string ;
    rdfs:subPropertyOf aff:quality .

aff:hard a [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:implies ],
        aff:Quality,
        owl:NamedIndividual .

aff:location a owl:ObjectProperty ;
    rdfs:range xsd:string ;
    rdfs:subPropertyOf aff:quality .

aff:soft a [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:implies ],
        aff:Quality,
        owl:NamedIndividual .

aff:Affordance a owl:Class ;
    rdfs:subClassOf [ a owl:Class ;
            owl:oneOf ( aff:eatable ) ],
        owl:Thing .

aff:KitchenEntity a owl:Class ;
    rdfs:subClassOf [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:form ],
        [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:affords ],
        [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:color ],
        [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:quality ],
        [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:location ],
        owl:Thing .

aff:Action a owl:Class ;
    rdfs:subClassOf [ a owl:Class ;
            owl:oneOf ( aff:eat aff:cut ) ],
        owl:Thing .

aff:implies a owl:ObjectProperty ;
    rdfs:domain aff:Quality ;
    rdfs:range aff:Affordance .

aff:Quality a owl:Class ;
    rdfs:subClassOf [ a owl:Class ;
            owl:oneOf ( aff:soft aff:hard ) ],
        [ a owl:Restriction ;
            owl:allValuesFrom owl:Nothing ;
            owl:onProperty aff:implies ],
        owl:Thing .

aff:quality a owl:ObjectProperty ;
    rdfs:domain aff:KitchenEntity ;
    rdfs:range aff:Quality .

